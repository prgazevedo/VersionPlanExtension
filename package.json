{
  "name": "claude-config-manager",
  "displayName": "Claude Config Manager",
  "description": "Manage CLAUDE.MD files for Claude Code with workspace Git integration and custom activity bar icon",
  "version": "2.0.0",
  "publisher": "prgazevedo",
  "author": "Pedro Azevedo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prgazevedo/VersionPlanExtension.git"
  },
  "bugs": {
    "url": "https://github.com/prgazevedo/VersionPlanExtension/issues"
  },
  "homepage": "https://github.com/prgazevedo/VersionPlanExtension#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "claude",
    "ai",
    "configuration",
    "sync",
    "github",
    "template",
    "markdown"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-config.sync",
        "title": "Sync to Git",
        "category": "Claude Config",
        "icon": "$(sync)"
      },
      {
        "command": "claude-config.create",
        "title": "Create from Template",
        "category": "Claude Config",
        "icon": "$(file-add)"
      },
      {
        "command": "claude-config.edit",
        "title": "Edit CLAUDE.md",
        "category": "Claude Config",
        "icon": "$(edit)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-config-container",
          "title": "Claude Config",
          "icon": "./assets/claude-icon.png"
        }
      ]
    },
    "views": {
      "claude-config-container": [
        {
          "id": "claude-config",
          "name": "Claude Config",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "claude-config",
        "contents": "Manage your CLAUDE.md configuration file.\n[Create CLAUDE.md](command:claude-config.create)\n[Edit CLAUDE.md](command:claude-config.edit)\n[Sync to Git](command:claude-config.sync)",
        "when": "workspaceFolderCount > 0"
      }
    ],
    "configuration": {
      "title": "Claude Config Manager",
      "properties": {
        "claude-config.autoSync": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sync CLAUDE.md changes to git repository"
        },
        "claude-config.defaultTemplate": {
          "type": "string",
          "default": "basic",
          "description": "Default template to use when creating new CLAUDE.md files",
          "enum": [
            "basic",
            "web-dev",
            "data-science"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "sharp": "^0.34.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "simple-git": "^3.19.1"
  }
}
