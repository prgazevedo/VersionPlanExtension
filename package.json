{
  "name": "claude-config-manager",
  "displayName": "Claude Config Manager",
  "description": "Comprehensive Claude Code workflow manager: CLAUDE.md configuration sync, conversation history browser, PROJECT_PLAN integration with Git, ccusage-powered usage tracking, and WebDAV cloud synchronization",
  "version": "3.4.0",
  "publisher": "azevedo-software",
  "author": "Pedro Azevedo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prgazevedo/VersionPlanExtension.git"
  },
  "bugs": {
    "url": "https://github.com/prgazevedo/VersionPlanExtension/issues"
  },
  "homepage": "https://github.com/prgazevedo/VersionPlanExtension#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "assets/claude-icon.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "claude",
    "ai",
    "configuration",
    "sync",
    "github",
    "template",
    "markdown",
    "conversation",
    "history",
    "chat",
    "browser",
    "export",
    "ccusage",
    "usage",
    "tracking",
    "tokens"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-config.sync",
        "title": "Sync Claude Configuration to Git",
        "category": "Claude Config",
        "icon": "$(sync)"
      },
      {
        "command": "claude-config.edit",
        "title": "Edit CLAUDE.md",
        "category": "Claude Config",
        "icon": "$(edit)"
      },
      {
        "command": "claude-config.openConversations",
        "title": "Open Conversations",
        "category": "Claude Config",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "claude-config.refreshConversations",
        "title": "Refresh Conversations",
        "category": "Claude Config",
        "icon": "$(refresh)"
      },
      {
        "command": "claude-config.viewConversation",
        "title": "View Conversation",
        "category": "Claude Config",
        "icon": "$(eye)"
      },
      {
        "command": "claude-config.exportConversation",
        "title": "Export Conversation",
        "category": "Claude Config",
        "icon": "$(export)"
      },
      {
        "command": "claude-config.exportAllConversations",
        "title": "Export All Conversations",
        "category": "Claude Config",
        "icon": "$(save-all)"
      },
      {
        "command": "claude-config.addProjectPlanRule",
        "title": "Add PROJECT_PLAN Rule to CLAUDE.md",
        "category": "Claude Config",
        "icon": "$(add)"
      },
      {
        "command": "claude-config.viewUsageStats",
        "title": "View Usage Statistics",
        "category": "Claude Config",
        "icon": "$(graph)"
      },
      {
        "command": "claude-config.showUsageQuickPick",
        "title": "Show Usage Quick Pick (ccusage)",
        "category": "Claude Config",
        "icon": "$(pie-chart)"
      },
      {
        "command": "claude-config.debugCcusage",
        "title": "Debug ccusage Integration",
        "category": "Claude Config",
        "icon": "$(debug-alt)"
      },
      {
        "command": "claude-config.installCcusageHelp",
        "title": "Install ccusage Help",
        "category": "Claude Config",
        "icon": "$(question)"
      },
      {
        "command": "claude-config.showOutputChannel",
        "title": "Show Output Channel",
        "category": "Claude Config",
        "icon": "$(output)"
      },
      {
        "command": "claude-config.refreshUsage",
        "title": "Refresh Usage Statistics",
        "category": "Claude Config",
        "icon": "$(refresh)"
      },
      {
        "command": "claude-config.syncToCloud",
        "title": "Sync to Cloud",
        "category": "Claude Config",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "claude-config.openCloudSettings",
        "title": "Open Cloud Settings",
        "category": "Claude Config",
        "icon": "$(settings-gear)"
      },
      {
        "command": "claude-config.toggleContext7",
        "title": "Toggle Context7 Auto-Append",
        "category": "Claude Config",
        "icon": "$(symbol-keyword)"
      },
      {
        "command": "claude-config.installContext7Help",
        "title": "Install Context7 MCP Help",
        "category": "Claude Config",
        "icon": "$(question)"
      },
      {
        "command": "claude-config.setWebDAVPassword",
        "title": "Set WebDAV Password",
        "category": "Claude Config",
        "icon": "$(key)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-config-container",
          "title": "Claude Config",
          "icon": "./assets/claude-icon.png"
        }
      ]
    },
    "views": {
      "claude-config-container": [
        {
          "id": "claude-config",
          "name": "Claude Config"
        },
        {
          "id": "claude-conversations",
          "name": "Conversations"
        },
        {
          "id": "claude-usage-monitor",
          "name": "CCUsage Monitor"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "claude-config",
        "contents": "Manage your Claude configuration files.\n[Edit CLAUDE.md](command:claude-config.edit)\n[Sync to Git](command:claude-config.sync)",
        "when": "workspaceFolderCount > 0"
      },
      {
        "view": "claude-config",
        "contents": "Open a workspace to manage Claude configuration files.\n\n**Claude Config Manager** helps you:\n• Sync CLAUDE.md files to Git\n• Browse conversation history\n• Manage PROJECT_PLAN integration\n\n[Open Folder](command:vscode.openFolder)",
        "when": "workspaceFolderCount == 0"
      },
      {
        "view": "claude-conversations",
        "contents": "Browse and manage your Claude conversations.\n[Open Conversations](command:claude-config.openConversations)\n[Refresh](command:claude-config.refreshConversations)",
        "when": "workspaceFolderCount > 0"
      },
      {
        "view": "claude-conversations",
        "contents": "**Conversation Browser** is available!\n\nYou can browse Claude conversations even without a workspace.\n\n[Open Conversations](command:claude-config.openConversations)\n[Refresh](command:claude-config.refreshConversations)\n\n*Open a workspace for full Claude Config features.*",
        "when": "workspaceFolderCount == 0"
      },
      {
        "view": "claude-usage-monitor",
        "contents": "Real-time Claude usage monitoring powered by ccusage.\nShows actual token usage, costs, and model breakdowns.\n[Install ccusage Help](command:claude-config.installCcusageHelp) | [Debug Integration](command:claude-config.debugCcusage)"
      }
    ],
    "configuration": {
      "title": "Claude Config Manager",
      "properties": {
        "claude-config.autoSync": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sync CLAUDE.md changes to git repository"
        },
        "claude-config.conversationDataPath": {
          "type": "string",
          "description": "Custom path to Claude conversation data directory (leave empty for default ~/.claude/projects)"
        },
        "claude-config.autoUseContext7": {
          "type": "boolean",
          "default": false,
          "description": "Automatically append 'use context7' to coding prompts for real-time documentation"
        },
        "claude-config.usageTracking.showInStatusBar": {
          "type": "boolean",
          "default": false,
          "description": "Show ccusage status in status bar"
        },
        "claude-config.cloudSync.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable WebDAV cloud synchronization"
        },
        "claude-config.cloudSync.webdav.serverUrl": {
          "type": "string",
          "description": "WebDAV server URL (e.g., https://your-domain.com/remote.php/dav/files/username/)"
        },
        "claude-config.cloudSync.webdav.username": {
          "type": "string",
          "description": "WebDAV username"
        },
        "claude-config.cloudSync.webdav.passwordButton": {
          "type": "string",
          "markdownDescription": "**[Set WebDAV Password](command:claude-config.setWebDAVPassword)** - Securely store your WebDAV password",
          "default": "Click 'Set WebDAV Password' to configure authentication",
          "readOnly": true
        },
        "claude-config.cloudSync.webdav.basePath": {
          "type": "string",
          "default": "/Claude-Config-Sync/",
          "description": "Base path for Claude data on WebDAV server"
        },
        "claude-config.cloudSync.webdav.verifySSL": {
          "type": "boolean",
          "default": true,
          "description": "Verify SSL certificates (disable only for self-signed certificates)"
        },
        "claude-config.cloudSync.autoSync": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic background sync"
        },
        "claude-config.cloudSync.syncInterval": {
          "type": "number",
          "default": 0,
          "description": "Sync interval in minutes (0 for manual only)"
        },
        "claude-config.summaryCache.ttlMinutes": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "Time-to-live for summary cache entries in minutes"
        },
        "claude-config.summaryCache.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable summary caching for faster tree view loading"
        },
        "claude-config.search.fuzzySearch": {
          "type": "boolean",
          "default": true,
          "description": "Enable fuzzy search in conversation search"
        },
        "claude-config.search.maxResults": {
          "type": "number",
          "default": 50,
          "minimum": 10,
          "maximum": 500,
          "description": "Maximum number of search results to display"
        },
        "claude-config.analytics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable conversation analytics and insights"
        },
        "claude-config.analytics.trackingPeriod": {
          "type": "number",
          "default": 90,
          "minimum": 30,
          "maximum": 365,
          "description": "Number of days to include in analytics calculations"
        },
        "claude-config.cloudSync.compression": {
          "type": "boolean",
          "default": true,
          "description": "Enable data compression"
        },
        "claude-config.cloudSync.encryption": {
          "type": "boolean",
          "default": false,
          "description": "Enable data encryption"
        },
        "claude-config.cloudSync.maxFileSize": {
          "type": "number",
          "default": 52428800,
          "description": "Maximum file size for sync in bytes (default: 50MB)"
        },
        "claude-config.cloudSync.conflictResolution": {
          "type": "string",
          "enum": ["local", "remote", "ask"],
          "default": "ask",
          "description": "Default conflict resolution strategy"
        },
        "claude-config.cloudSync.deviceId": {
          "type": "string",
          "description": "Unique device identifier for cloud sync (auto-generated)"
        },
        "claude-config.cloudSync.lastSyncTime": {
          "type": "string",
          "description": "Timestamp of last successful sync (auto-updated)"
        },
        "claude-config.cloudSync.smartSyncRecentDays": {
          "type": "number",
          "default": 7,
          "description": "Number of recent days to include full conversations in smart sync"
        },
        "claude-config.cloudSync.smartSyncMinMessages": {
          "type": "number",
          "default": 10,
          "description": "Minimum message count to include full conversation in smart sync"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "24.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.33.0",
    "sharp": "^0.34.3",
    "typescript": "^5.9.2",
    "@types/xml2js": "^0.4.14",
    "@types/node-fetch": "^2.6.11"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "simple-git": "^3.19.1",
    "node-fetch": "^2.7.0",
    "xml2js": "^0.6.2"
  }
}
