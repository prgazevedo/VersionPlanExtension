{
  "name": "claude-config-manager",
  "displayName": "Claude Config Manager",
  "description": "Comprehensive Claude Code workflow manager: CLAUDE.md configuration sync and conversation history browser with Git integration",
  "version": "3.0.0",
  "publisher": "prgazevedo",
  "author": "Pedro Azevedo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prgazevedo/VersionPlanExtension.git"
  },
  "bugs": {
    "url": "https://github.com/prgazevedo/VersionPlanExtension/issues"
  },
  "homepage": "https://github.com/prgazevedo/VersionPlanExtension#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "claude",
    "ai",
    "configuration",
    "sync",
    "github",
    "template",
    "markdown",
    "conversation",
    "history",
    "chat",
    "browser",
    "export"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-config.sync",
        "title": "Sync to Git",
        "category": "Claude Config",
        "icon": "$(sync)"
      },
      {
        "command": "claude-config.create",
        "title": "Create from Template",
        "category": "Claude Config",
        "icon": "$(file-add)"
      },
      {
        "command": "claude-config.edit",
        "title": "Edit CLAUDE.md",
        "category": "Claude Config",
        "icon": "$(edit)"
      },
      {
        "command": "claude-config.openConversations",
        "title": "Open Conversations",
        "category": "Claude Config",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "claude-config.refreshConversations",
        "title": "Refresh Conversations",
        "category": "Claude Config",
        "icon": "$(refresh)"
      },
      {
        "command": "claude-config.viewConversation",
        "title": "View Conversation",
        "category": "Claude Config",
        "icon": "$(eye)"
      },
      {
        "command": "claude-config.exportConversation",
        "title": "Export Conversation",
        "category": "Claude Config",
        "icon": "$(export)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-config-container",
          "title": "Claude Config",
          "icon": "./assets/claude-icon.png"
        }
      ]
    },
    "views": {
      "claude-config-container": [
        {
          "id": "claude-config",
          "name": "Claude Config",
          "when": "workspaceFolderCount > 0"
        },
        {
          "id": "claude-conversations",
          "name": "Conversations",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "claude-config",
        "contents": "Manage your CLAUDE.md configuration file.\n[Create CLAUDE.md](command:claude-config.create)\n[Edit CLAUDE.md](command:claude-config.edit)\n[Sync to Git](command:claude-config.sync)",
        "when": "workspaceFolderCount > 0"
      },
      {
        "view": "claude-conversations",
        "contents": "Browse and manage your Claude conversations.\n[Open Conversations](command:claude-config.openConversations)\n[Refresh](command:claude-config.refreshConversations)",
        "when": "workspaceFolderCount > 0"
      }
    ],
    "configuration": {
      "title": "Claude Config Manager",
      "properties": {
        "claude-config.autoSync": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sync CLAUDE.md changes to git repository"
        },
        "claude-config.defaultTemplate": {
          "type": "string",
          "default": "basic",
          "description": "Default template to use when creating new CLAUDE.md files",
          "enum": [
            "basic",
            "web-dev",
            "data-science"
          ]
        },
        "claude-config.conversationDataPath": {
          "type": "string",
          "description": "Custom path to Claude conversation data directory (leave empty for default ~/.claude/projects)"
        },
        "claude-config.backupEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable backup of conversations to Git repository"
        },
        "claude-config.backupRepository": {
          "type": "string",
          "description": "Git repository URL for conversation backups"
        },
        "claude-config.autoBackup": {
          "type": "boolean",
          "default": false,
          "description": "Automatically backup conversations after each session"
        },
        "claude-config.backupRetentionDays": {
          "type": "number",
          "default": 30,
          "description": "Number of days to retain conversation backups"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "24.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "sharp": "^0.34.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "simple-git": "^3.19.1"
  }
}
